load("//bazel:psi.bzl", "psi_cc_library")

package(default_visibility = ["//visibility:public"])

psi_cc_library(
    name = "types",
    hdrs = ["types.h"],
    deps = [
        "@yacl//yacl/base:int128",
    ],
)

psi_cc_library(
    name = "psi_io",
    hdrs = ["psi_io.h"],
    deps = [
        ":types",
    ],
)

psi_cc_library(
    name = "psi_operator",
    srcs = ["psi_operator.cc"],
    hdrs = ["psi_operator.h"],
    deps = [
        ":psi_io",
        "//psi/checkpoint:recovery",
        "//psi/utils:sync",
    ],
)
