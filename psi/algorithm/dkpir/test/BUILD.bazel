load("@rules_proto//proto:defs.bzl", "proto_library")
load("//bazel:psi.bzl", "psi_cc_binary", "psi_cc_library", "psi_cc_test")

package(default_visibility = ["//visibility:public"])

psi_cc_library(
    name = "receiver",
    srcs = ["receiver.cc"],
    hdrs = ["receiver.h"],
    deps = [
        "//psi/algorithm/dkpir:common",
        "//psi/algorithm/dkpir:oprf_receiver",
        "//psi/algorithm/dkpir:receiver",
        "//psi/utils:csv_converter",
        "//psi/wrapper/apsi/utils:sender_db",
        "@heu//heu/library/algorithms/elgamal",
    ],
)

psi_cc_library(
    name = "sender",
    srcs = ["sender.cc"],
    hdrs = ["sender.h"],
    deps = [
        "//psi/algorithm/dkpir:common",
        "//psi/algorithm/dkpir:entry",
        "//psi/algorithm/dkpir:sender",
        "//psi/utils:csv_converter",
        "@apsi",
        "@heu//heu/library/algorithms/elgamal",
        "@yacl//yacl/crypto/rand",
    ],
)

psi_cc_test(
    name = "dk_pir_test",
    srcs = ["dk_pir_test.cc"],
    data = [
        "//examples/pir/apsi/data:all_files",
        "//examples/pir/apsi/parameters:all_files",
    ],
    flaky = True,  # cuckoo hash stuff
    deps = [
        ":receiver",
        ":sender",
        "//psi/utils:random_str",
    ],
)
