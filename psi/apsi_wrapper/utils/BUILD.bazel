load("//bazel:psi.bzl", "psi_cc_library", "psi_cc_test")

package(default_visibility = ["//visibility:public"])

psi_cc_library(
    name = "common",
    srcs = ["common.cc"],
    hdrs = ["common.h"],
    deps = [
        "@com_github_microsoft_apsi//:apsi",
    ],
)

psi_cc_library(
    name = "csv_reader",
    srcs = ["csv_reader.cc"],
    hdrs = ["csv_reader.h"],
    deps = [
        ":common",
        "//psi/utils:multiplex_disk_cache",
        "@org_apache_arrow//:arrow",
    ],
)

psi_cc_library(
    name = "sender_db",
    srcs = ["sender_db.cc"],
    hdrs = ["sender_db.h"],
    deps = [
        ":csv_reader",
    ],
)

psi_cc_library(
    name = "bucket",
    srcs = ["bucket.cc"],
    hdrs = ["bucket.h"],
    deps = [
        ":sender_db",
        "@com_github_microsoft_apsi//:apsi",
    ],
)
