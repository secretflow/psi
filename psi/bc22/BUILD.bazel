    deps = [
        ":generalized_cuckoo_hash",
    ],
)

psi_cc_binary(
    name = "bc22_psi_benchmark",
    srcs = ["bc22_psi_benchmark.cc"],
    deps = [
        ":bc22_psi",
        "@com_github_google_benchmark//:benchmark_main",
    ],
)
