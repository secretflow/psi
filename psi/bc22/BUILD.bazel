psi_cc_test(
    name = "bc22_psi_test",
    srcs = ["bc22_psi_test.cc"],
    deps = [
        ":bc22_psi",
    ],
)

psi_cc_library(
    name = "emp_vole",
    srcs = ["emp_vole.cc"],
    hdrs = ["emp_vole.h"],
