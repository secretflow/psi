    name = "ecdh_psi",
    srcs = ["ecdh_psi.cc"],
    hdrs = ["ecdh_psi.h"],
    deps = [
        ":ecdh_logger",
        "//psi/cryptor:cryptor_selector",
        "//psi/utils:batch_provider_impl",
        "//psi/utils:communication",
