load("//bazel:psi.bzl", "psi_cc_binary", "psi_cc_library", "psi_cc_test")

package(default_visibility = ["//visibility:public"])

psi_cc_library(
    name = "dp_psi_utils",
    srcs = [
        "dp_psi_utils.cc",
    ],
    hdrs = [
        "dp_psi_utils.h",
    ],
)

psi_cc_library(
    name = "dp_psi",
    srcs = [
        "dp_psi.cc",
    ],
    hdrs = [
        "dp_psi.h",
    ],
    deps = [
        ":dp_psi_utils",
        "//psi/cryptor:cryptor_selector",
        "//psi/ecdh:ecdh_3pc_psi",
        "//psi/ecdh:ecdh_psi",
        "//psi/utils:batch_provider",
        "//psi/utils:ec_point_store",
        "//psi/utils:serialize",
        "@com_google_absl//absl/strings",
        "@yacl//yacl/base:exception",
        "@yacl//yacl/crypto/utils:rand",
        "@yacl//yacl/link",
        "@yacl//yacl/utils:parallel",
    ],
)

psi_cc_test(
    name = "dp_psi_test",
    srcs = ["dp_psi_test.cc"],
    deps = [
        ":dp_psi",
        "@com_google_absl//absl/container:flat_hash_set",
    ],
)

psi_cc_binary(
    name = "dp_psi_benchmark",
    srcs = ["dp_psi_benchmark.cc"],
    deps = [
        ":dp_psi",
        "@com_github_google_benchmark//:benchmark_main",
        "@com_google_absl//absl/container:flat_hash_set",
    ],
)

psi_cc_binary(
    name = "dp_psi_payload_benchmark",
    srcs = ["dp_psi_payload_benchmark.cc"],
    deps = [
        ":dp_psi",
        "@com_github_google_benchmark//:benchmark_main",
        "@com_google_absl//absl/container:flat_hash_set",
    ],
)
